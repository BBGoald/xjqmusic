<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. no title-->
    <style name="AppTheme" parent="AppBaseTheme">
                <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- App theme, no title -->
    <style name="Theme.AppStartLoad" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- 灰色线 -->
 	<style name="img_gray_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/_2px_in720p</item>          
        <item name="android:background">@color/gray2</item>       
    </style>
    
    <!-- 大号字体 -->
    <style name="font_big_black">
        <item name="android:textSize">@dimen/_40px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>       
    </style>
    <style name="layout_background">
		 <item name="android:background">@color/white</item> 
    </style>
    
    <style name="font_big_white">
        <item name="android:textSize">@dimen/_40px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="font_small_black">
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="font_small_gray">
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="font_middle_white">
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="font_middle_black">
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    
    <style name="font_small_white">
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="listview_style1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/half_transparent</item>
        <item name="android:dividerHeight">@dimen/_2px_in720p</item>
        <item name="android:listSelector">@drawable/item_selector</item>
         <item name="android:scrollbars">none</item>        
    </style>
